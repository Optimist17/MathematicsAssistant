<Application x:Class="MathematicsAssistant.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MathematicsAssistant.GUI"
             xmlns:vm="clr-namespace:MathematicsAssistant.GUI.ViewModels"
             xmlns:view="clr-namespace:MathematicsAssistant.GUI.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:TriangleCalculationTabViewModel}">
            <view:TriangleCalculationTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MainTabViewModel}">
            <view:MainTabView/>
        </DataTemplate>
    </Application.Resources>
</Application>
